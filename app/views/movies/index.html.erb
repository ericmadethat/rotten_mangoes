<%= link_to "Submit a movie!", new_movie_path %>
<hr>
		<div class="row">
			<div class = "col-lg-12">
				<%= form_tag("/", method: "get") do %>
		  	<h1><%= label_tag("Search for:") %></h1>
		  	<%= label_tag("Title") %>
		  	<%= text_field_tag(:title) %>

		  	<%= label_tag("Director") %>
		  	<%= text_field_tag(:director)%>

		  	<%= select_tag(:runtime_in_minutes, options_for_select([['-', 1], ['Under 90 minutes', 2], ['Between 90 and 120 minutes', 3], ['Over 120 minutes', 4]])) %>
		  	<%= submit_tag("Search") %>
				<% end %><br />
			</div>

			<div class="col-md-6">			
				<% @movies.each do |movie| %>
		  	<%= link_to image_tag(movie.image_url(:thumb).to_s), movie_path(movie)%>
			  <h2><%= link_to movie.title, movie_path(movie) %></h2>
			  <h3><%= movie.release_date %></h3>
			  <h4>Dir. <%= movie.director %> | <%= movie.runtime_in_minutes %> minutes</h4>
			  <p><%= movie.description %></p>
		  </div>
		  <% end %>
	 	</div>
	</div><hr>

