<div class="container">
	<div><br>
		<p><%= link_to "Back to all movies", movies_path %></p>
	</div>
	<div class="empty-fake">
	</div>
	<div class="poster-zoom">
		<%= link_to image_tag(@movie.image_url.to_s), movie_path(@movie) %>
	</div>

	<div class="movie-description">
		<h2><%= @movie.title %></h2> 
		<small><p>(<%= link_to "edit", edit_movie_path(@movie) %>, <%= link_to "delete", movie_path(@movie), method: :delete, confirm: "You sure?" %>)</p></small>
		<h3><%= @movie.release_date %></h3>
		<h4>Dir. <%= @movie.director %> | <%= @movie.runtime_in_minutes %> minutes</h4>
		<p><%= @movie.description %></p>

		<hr>

		<h3>Reviews of <em><%= @movie.title %></em></h3>
		<% if current_user %>
		  <% @movie.reviews.each do |review| %>
		    <p><%= review.text %></p>
		    <p><%= review.rating_out_of_ten %>/10</p>
		    <small>- <%= review.user.full_name %></small><br/>
		  <% end %>
		  <p><%= link_to "Write a review!", new_movie_review_path(@movie) %></p>
		<% else %>
		  <p>Please <%= link_to "log in", new_session_path %> to see reviews and add your own.</p> 
		<% end %>
	</div>
</div>